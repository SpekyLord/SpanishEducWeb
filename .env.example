# Server Configuration
NODE_ENV=development
PORT=3001

# Client URL (for CORS and email links)
CLIENT_URL=http://localhost:5173

# MongoDB Atlas Connection
# Get your connection string from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/spanishconnect?retryWrites=true&w=majority

# JWT Secrets (generate strong random strings, min 32 characters)
# You can generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your-access-token-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars

# Cloudinary Configuration
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Resend Email Service (Optional)
# Get API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=noreply@yourdomain.com
